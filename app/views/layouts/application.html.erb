<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

    <div class="navbar-inner">
      <div class="container" style="padding-top: 5px">
        <div class="pull-right">
          <% if signed_in? %>
              Hello <%= @user.name %>
              <a class="btn" href="<%= sign_out_url() %>" data-method="delete">Sign out</a>
          <% else %>
              <a class="btn" href="<%= sign_in_link %>">Sign in</a>
          <% end %>
        </div>
      </div>
    </div>

    <div class="row-fluid">
      <%= yield %>
    </div>

</body>
</html>
